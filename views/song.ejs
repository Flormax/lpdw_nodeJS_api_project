<% include partials/header %>
    <h1>
        <% if (user_admin) { %>
        <a href="/songs/edit/<%=song._id%>">
            <button type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
        </a>
        <% } %>
        <%=song.title%>
    </h1>
    <hr/>
    Album  : <%=song.album%><br/>
    Artist : <%=song.artist%><br/>
    <% if (song.year) { %>
        Year   : <%=song.year%><br/>
    <% } %>
    <% if (song.bpm) { %>
        BPM   : <%=song.bpm%><br/>
    <% } %>
    <hr/>
    <% if (locals.eval) {
        for(var i=0; i<eval.evaluation; i++) { %>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        <% }
        for(var i=eval.evaluation; i<5; i++) { %>
            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
        <% } %>
    <% } %>
    <% if (!locals.eval) { %>
       <form action="/evaluations" method="post" class="form-inline">
         <% include _formEvaluation %>
       </form>
   <% } %>
   <br/>
   <form method="POST" action="/users/addFavorite/<%= song._id%>?_method=put">
        <% include _formAddFavorite %>
   </form>
   <hr/>
    <a href="/songs">
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Back to songs list
      </button>
    </a>
<% include partials/footer %>
